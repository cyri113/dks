<div class="navbar navbar-default navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand">Brand name</a>
    </div>
    <div class="collapse navbar-collapse">
    	<% if user_signed_in? %>
      <ul class="nav navbar-nav navbar-right">  
				<li class="dropdown">
					<% if current_user.role? :admin %>
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						<span class="glyphicon glyphicon-briefcase"></span> Companies<b class="caret"></b>
					</a>
					<ul class="dropdown-menu" role="menu">
						<li>
						<%= link_to companies_path do %>
							<span class="glyphicon glyphicon-list"></span> View Companies
						<% end %>
						</li>
						<li><a href="#"><span class="glyphicon glyphicon-plus"></span> Create Company</a></li>
					</ul>
					<% else %>
	        <li>
		        <%= link_to @company do %>
							<span class="glyphicon glyphicon-home"></span> <%= current_user.company.name %>
						<% end %>
					</li>
					<% end %>
				</li>
			</ul>
      <% end %>
    </div>
  </div>
</div>