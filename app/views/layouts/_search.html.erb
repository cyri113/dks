<div class="row">
  <div class="col-md-3 col-xs-1"></div>
  <div class="col-md-6 col-xs-10 text-center">
  	<%= form_tag search_path, method: "get", role: "form", id: "search_form" do %>
		  <div class="input-group">
			  <%= search_field_tag :q, nil, class: "form-control input-lg", placeholder: "Enter dokspot code", autofocus: true %>
